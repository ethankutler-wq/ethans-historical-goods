generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StravaToken {
  id            String   @id @default(cuid())
  athleteId     String   @unique
  athleteName   String?
  accessToken   String
  refreshToken  String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ScheduledWorkout {
  id                    String   @id @default(cuid())
  date                  DateTime // Day of workout (date only, time ignored)
  type                  String   // cycling | swimming | running
  name                  String?  // e.g. "Morning ride"
  plannedDurationMinutes Int?
  plannedDistanceMeters  Int?    // For swim: 1000m, etc.
  notes                 String?
  order                 Int     @default(0) // Display order within day
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([date])
}
